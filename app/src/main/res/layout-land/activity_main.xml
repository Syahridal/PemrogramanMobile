<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="166dp" app:srcCompat="@drawable/lol" android:id="@+id/imageView2"
            android:contentDescription="@android:string/VideoView_error_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="127dp"
            android:layout_height="119dp" app:srcCompat="@drawable/pp"
            android:id="@+id/imageView3"
            android:contentDescription="@android:string/VideoView_error_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="@+id/imageView2"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.057"/>
    <TextView
            android:text="@string/nama"
            android:id="@+id/textView"
            style="@style/landscape"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="8dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"/>
    <TextView
            android:text="@string/tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            style="@style/landscape"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="@string/ttg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            style="@style/app"
            android:textColor="@android:color/background_dark" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/bio"
            android:layout_width="711dp"
            android:layout_height="156dp" android:id="@+id/textView4"
            style="@style/app"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <ImageView
            android:layout_width="49dp"
            android:layout_height="60dp" app:srcCompat="@drawable/ic_favorite_black_24dp"
            android:id="@+id/imageView4"
            android:layout_marginTop="136dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:contentDescription="@android:string/VideoView_error_button"/>
    <Button
            android:text="Yeay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="#FFFFFF" android:background="#3F51BE"/>
</androidx.constraintlayout.widget.ConstraintLayout>